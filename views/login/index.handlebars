<h1 class="text-center">Controle de Estoque</h1>

<form action="/login" method="post">
  <div class="mb-3">
    <label for="txtLogin" class="form-label">Login</label>
    <input type="text" class="form-control" id="txtLogin" aria-describedby="emailHelp">
  </div>
  <div class="mb-3">
    <label for="txtSenha" class="form-label">Senha</label>
    <input type="password" class="form-control" id="txtSenha">
  </div>
  <div class="form-check form-check-inline">
    <input class="form-check-input" type="radio" name="txtPerfil" id="txtRegional" value="regional">
    <label class="form-check-label" for="txtRegional">Regional</label>
  </div>
  <div class="form-check form-check-inline">
    <input class="form-check-input" type="radio" name="txtPerfil" id="txtPosto" value="posto">
    <label class="form-check-label" for="txtPosto">Poupatempo</label>
  </div>
   <div class="d-grid gap-2">
    <button type="submit" class="btn btn-primary mb-3">Entrar</button>
  </div>
</form>